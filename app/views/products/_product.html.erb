<div class="w-full flex flex-col lg:flex-row">
  <!-- Columna izquierda con informaci칩n del producto -->
  <div class="w-full lg:w-3/4 bg-white p-5 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
    <!-- Imagen grande del producto -->
    <% if product.images.any? %>
      <div class="w-full h-64 mb-5">
        <%= image_tag product.images.first, class: "w-full h-full object-cover rounded-lg", alt: product.name %>
      </div>
    <% end %>

    <!-- Nombre del producto -->
    <p class="my-5">
      <span class="font-bold text-3xl"><%= product.name %></span>
    </p>

    <!-- Descripci칩n del producto -->
    <p class="my-5">
      <strong class="block font-medium mb-1 text-2xl">Description:</strong>
      <span class="text-lg"><%= product.description %></span>
    </p>

    <!-- Otras im치genes del producto -->
    <% if product.images.count > 1 %>
      <p class="my-5">
        <strong class="block font-medium mb-1 text-2xl">More Images:</strong>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
          <% product.images.drop(1).each do |image| %>
            <div class="w-full h-40">
              <%= link_to url_for(image), class: "block w-full h-full" do %>
                <%= image_tag image, class: "w-full h-full object-cover rounded-lg", alt: product.name %>
              <% end %>
            </div>
          <% end %>
        </div>
      </p>
    <% end %>
  </div>

  <!-- Columna derecha con la secci칩n "add to cart" y precio -->
  <div class="w-full lg:w-1/4 my-5 lg:my-0 lg:ml-8">
    <p class="my-5">
      <strong class="block font-medium mb-1 text-2xl">Price:</strong>
      <% before_price = product.price + 20 %>
      <span class="block text-lg font-semibold text-gray-600 line-through"><%= number_to_currency before_price %></span>
      <span class="block text-3xl font-bold text-red-500"><%= number_to_currency product.price %></span>
    </p>
    
    <div id="add-to-cart" class="my-5">
      <%= render "products/add_to_cart", product: product %>
    </div>
  </div>
</div>
