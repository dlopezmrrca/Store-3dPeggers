<div id="<%= dom_id product %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= product.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Images:</strong>
    <% product.images.each do |image| %>
      <div><%= link_to image.filename, image %></div>
    <% end %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= product.price %>
  </p>
  <%# Change this later %>
          <%#link_to "Buy Now", product_buy_now_path(product), class: "rounded-lg font-semibold p-2 bg-blue-500 text-white"%>
          <div id="add-to-cart">
            <%= render "products/add_to_cart", product: @product %>
          </div>
          
        

</div>
