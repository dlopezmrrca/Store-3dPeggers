<% if @current_cart && @current_cart.products.where(id: @product.id).any?%>
<div class ="rounded-lg font-semibold p-2 bg-yellow-500">
  Already in Cart
</div>
<% else %>
<%= link_to "Add to cart", carts_path(product_id: @product.id), class: "rounded-lg font-semibold p-2 bg-yellow-500", data: { turbo_method: "post" } %>
<% end %>