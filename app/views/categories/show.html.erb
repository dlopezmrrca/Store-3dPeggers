<div class="w-full">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <h1 class="font-bold text-3xl text-center mt-5"><%= @category.name %></h1>

    <div id="products" class="min-w-full grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% @category.products.each do |product| %>
      <%= link_to product, class: "block bg-white p-5 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 text-center" do %>
        <%= image_tag product.images.first, class: "w-full h-40 object-cover rounded-lg mb-4" %>
        <h2 class="font-bold text-2xl my-2"><%= product.name %></h2>
        <% before_price = product.price + 20 %>
        <p class="text-lg font-semibold text-gray-600 line-through"><%= number_to_currency before_price %></p>
        <p class="text-3xl font-bold text-red-500 my-2"><%= number_to_currency product.price %></p>
      <% end %>
    <% end %>
  </div>
</div>
</div>
