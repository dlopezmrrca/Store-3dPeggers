<div class="w-full flex flex-col items-center md:pt-8">
  <div class="h-[40vh] w-full mb-8 flex flex-col items-center justify-center gap-4 bg-gray-100">
    <h2 class="text-5xl font-semibold">Thank you for purchasing!</h2>
    <div class="tenor-gif-embed" data-postid="10884063" data-share-method="host" data-aspect-ratio="1.29" data-width="10%"><a href="https://tenor.com/view/jesus-simpsons-screen-pc-character-gif-10884063">Jesus Simpsons GIF</a>from <a href="https://tenor.com/search/jesus-gifs">Jesus GIFs</a></div> <script type="text/javascript" async src="https://tenor.com/embed.js"></script>
  </div>
  <h1 class="text-5xl font-bold text-indigo-900 text-center mb-4">
    <%= @purchased_cart.products.map(&:name).join(", ") %>
  </h1>
  <div class="w-full max-w-4xl mx-auto bg-white shadow-lg rounded-lg p-6">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-2xl font-semibold text-gray-800">Invoice</h3>
      <p class="text-gray-600">Date: <%= Time.now.strftime("%d %B %Y") %></p>
    </div>
    <div class="w-full flex flex-col gap-2 mb-4">
      <% @invoice_items.each.with_index do |item, index| %>
        <div class="flex justify-between items-center bg-gray-100 p-4 rounded-md">
          <div class="flex items-center">
            <span class="px-2 py-1 rounded-full bg-gray-500 text-gray-100 mr-2"><%= index + 1 %></span>
            <p class="text-gray-800"><%= item.product.name %></p>
          </div>
          <div class="text-right">
            <p class="text-gray-600">Price: <%= number_to_currency item.price %></p>
            <p class="text-gray-600">Quantity: <%= item.quantity %></p>
            <p class="text-gray-600">Total: <%= number_to_currency item.price * item.quantity %></p>
            <p class="text-gray-600">GST: <%= number_to_currency item.price * @province.gst_rate * item.quantity %></p>
            <p class="text-gray-600">PST: <%= number_to_currency item.price * @province.pst_rate * item.quantity %></p>
            <p class="text-gray-600">HST: <%= number_to_currency item.price * @province.hst_rate * item.quantity %></p>
            <p class="text-gray-600">QST: <%= number_to_currency item.price * @province.qst_rate * item.quantity %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="w-full mt-4">
      <h3 class="text-2xl font-semibold text-gray-800 mb-2">Invoice Summary</h3>
      <div class="flex justify-between mb-2">
        <p class="text-gray-600">Subtotal:</p>
        <p class="text-gray-800"><%= number_to_currency @invoice_items.sum { |item| item.price * item.quantity } %></p>
      </div>
      <div class="flex justify-between mb-2">
        <p class="text-gray-600">Total GST:</p>
        <p class="text-gray-800"><%= number_to_currency @invoice_items.sum { |item| item.price * @province.gst_rate * item.quantity } %></p>
      </div>
      <div class="flex justify-between mb-2">
        <p class="text-gray-600">Total PST:</p>
        <p class="text-gray-800"><%= number_to_currency @invoice_items.sum { |item| item.price * @province.pst_rate * item.quantity } %></p>
      </div>
      <div class="flex justify-between mb-2">
        <p class="text-gray-600">Total HST:</p>
        <p class="text-gray-800"><%= number_to_currency @invoice_items.sum { |item| item.price * @province.hst_rate * item.quantity } %></p>
      </div>
      <div class="flex justify-between mb-2">
        <p class="text-gray-600">Total QST:</p>
        <p class="text-gray-800"><%= number_to_currency @invoice_items.sum { |item| item.price * @province.qst_rate * item.quantity } %></p>
      </div>
      <div class="flex justify-between font-bold text-lg">
        <p class="text-gray-600">Grand Total:</p>
        <p class="text-gray-800"><%= number_to_currency @invoice_items.sum { |item| item.price * item.quantity + item.price * @province.gst_rate * item.quantity + item.price * @province.pst_rate * item.quantity + item.price * @province.hst_rate * item.quantity + item.price * @province.qst_rate * item.quantity } %></p>
      </div>
    </div>
  </div>
</div>
